{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },

  "extends": "eslint:recommended",
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "globals": {
    "$": "readonly",
    "jQuery": "readonly"
  },

  "rules": {
    // "indent": ["error", 4],
    "ident": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": "off",
    "no-unused-vars": "warn"
    //"semi": ["error", "always"]
  }
}
